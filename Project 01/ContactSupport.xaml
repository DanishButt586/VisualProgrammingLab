<UserControl x:Class="Inventory_Management_System_SFML.ContactSupport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory_Management_System_SFML"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock Text="Contact Support" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="If you need assistance, please fill out the form below:" FontSize="16" Margin="0,0,0,10"/>

        <TextBlock Text="Name:" FontSize="16" Margin="0,5"/>
        <TextBox x:Name="txtName" Width="300" Margin="0,0,0,10"/>

        <TextBlock Text="Email:" FontSize="16" Margin="0,5"/>
        <TextBox x:Name="txtEmail" Width="300" Margin="0,0,0,10"/>

        <TextBlock Text="Message:" FontSize="16" Margin="0,5"/>
        <TextBox x:Name="txtMessage" Width="300" Height="100" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Button Content="Submit" Width="100" Click="Submit_Click"/>
    </StackPanel>
</UserControl>
